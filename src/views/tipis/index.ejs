<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <h1>Tipis</h1>
      <% if(currentUser) { %>
      <a href="/tipis/new" class="btn btn-primary">New Tipi</a>
      <% } %>

      <ul class="list-group">
        <% tipis.forEach((tipi) => { %>
        <li class="list-group-item">
          <a href="/tipis/<%= tipi.id %>"> <%= tipi.name %> </a>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
