<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container signIn-block">
      <% include ../static/partials/messages.ejs %>

      <h1 class="signIn-header">Welcome Back!</h1>

      <form action="/users/sign_in" method="post" class="sign-in-form">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            aria-describedby="nameHelp"
            placeholder="Enter name"
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            aria-describedby="emailHelp"
            placeholder="Enter email"
          />
          <small class="text-muted" id="emailHelp"
            >email address must be a valid address</small
          >
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            aria-describedby="passwordHelp"
            placeholder="Enter password"
          />
          <small class="text-muted" id="passwordHelp"
            >password must match confirmation below</small
          >
        </div>

        <button type="submit" class="btn btn-primary signIn-btn">
          Sign in
        </button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
